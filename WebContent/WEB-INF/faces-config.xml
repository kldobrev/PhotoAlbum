<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">
    <application>
    	<resource-bundle>
    		<base-name>resources.descriptions</base-name>
    		<var>descr</var>
    	</resource-bundle>
    </application>
    <navigation-rule>
    	<from-view-id>*</from-view-id>
    	<navigation-case>
    		<from-outcome>index</from-outcome>
    		<to-view-id>views/index.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
	<navigation-rule>
		<from-view-id>views/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>register</from-outcome>
			<to-view-id>views/user/register.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>views/user/register.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>views/user/regSuccess.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
